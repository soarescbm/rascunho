<script type='text/javascript'>
	$(document).ready(function (){

    function carregar(local,url){
       $(local).load(url);
    }

    $('#ajaxcontent').ajaxStart(function(){
       $('#carregando').css('display','block');
       $('#ajaxcontent').css('display','none');
    });
    
    $('#ajaxcontent').ajaxStop(function(){
       $('#carregando').css('display','none');
       $('#ajaxcontent').css('display','block');
    });

    $('#meusdados').click(function(e){
      e.preventDefault();
      carregar('#ajaxcontent','<?php echo $this->baseUrl;?>/meusdados');
  
    });

    $('#boletim').click(function(e){
      e.preventDefault();
      carregar('#ajaxcontent','<?php echo $this->baseUrl;?>/boletim');
    });

     $('#meusdocumentos').click(function(e){
